{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "preserve",
    "importHelpers": true,
    "strict": false,
    "strictBindCallApply": false,
    "strictFunctionTypes": false,
    "stripInternal": false,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowUnusedLabels": true,
    "noImplicitReturns": false,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": "./",
    "strictPropertyInitialization": true,
    "noImplicitThis": false,
    "strictNullChecks": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "noImplicitUseStrict": true,
    "emitBOM": false,
    "paths": {
      "nger-core": [
        "packages/nger-core/lib/index.ts"
      ],
      "nger-compiler": [
        "packages/nger-compiler/lib/index.ts"
      ],
      "nger-components": [
        "packages/nger-components/lib/index.ts"
      ],
      "@angular/compiler": [
        "packages/angular-compiler/lib/compiler.ts"
      ],
      "@angular/compiler/src/*": [
        "packages/angular-compiler/lib/*"
      ],
      "@angular/core": [
        "packages/angular-core/lib/core.ts"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "mocha"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "node_modules"
  ]
}